<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Jovvi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- base colors -->
        <item name="colorPrimary">@color/lynch</item>
        <item name="colorPrimaryVariant">@color/magenta</item>
        <item name="colorSecondary">@color/magenta</item>
        <item name="colorSecondaryVariant">@color/magenta</item>
        <item name="colorError">@color/magenta</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <!-- "on" colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/dove_gray</item>
        <item name="colorOnBackground">@color/dove_gray</item>
        <item name="colorOnError">@color/white</item>

        <!-- legacy appcompat colors-->
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>

        <!-- platform colors-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:statusBarColor">@color/black_10</item>
        <item name="android:navigationBarColor">@color/black_10</item>

        <!-- shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Jovvi.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Jovvi.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Jovvi.LargeComponent
        </item>

        <!-- typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Jovvi.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Jovvi.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Jovvi.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Jovvi.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Jovvi.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Jovvi.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Jovvi.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Jovvi.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Jovvi.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Jovvi.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Jovvi.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Jovvi.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Jovvi.Overline</item>

        <!-- default styles -->
        <item name="borderlessButtonStyle">@style/Widget.Jovvi.Button.TextButton</item>
        <item name="chipStyle">@style/Widget.Jovvi.Chip</item>
        <item name="editTextStyle">@style/Widget.Jovvi.EditText</item>
        <item name="textInputStyle">@style/Widget.Jovvi.TextInputLayout.Outlined</item>
        <item name="materialButtonStyle">@style/Widget.Jovvi.Button</item>
        <item name="toolbarStyle">@style/Widget.Jovvi.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.Jovvi.Toolbar.NavigationIcon
        </item>
        <item name="bottomSheetStyle">@style/Widget.Jovvi.BottomSheet.Modal</item>

        <!-- dialog styles -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Jovvi.BottomSheetDialog</item>

        <!-- custom view styles -->
        <item name="categoryViewStyle">@style/CategoryView</item>
    </style>

    <style name="Theme.Jovvi" parent="Base.Theme.Jovvi" />

    <style name="ThemeOverlay.Jovvi.Colored" parent="ThemeOverlay.MaterialComponents">
        <!-- "on" colors -->
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- legacy appcompat colors-->
        <item name="colorControlActivated">@color/white_30</item>
    </style>


</resources>
